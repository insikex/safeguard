# ===========================================
# Safeguard Bot Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Telegram Bot Token (Required)
# Get from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Bot Admin IDs (Optional)
# Comma-separated Telegram user IDs who have admin access
# First ID is considered the owner and can use /broadcast
ADMIN_IDS=123456789,987654321

# Database URL (Optional)
# Default: sqlite:///safeguard.db
DATABASE_URL=sqlite:///safeguard.db

# Verification Settings
# Timeout in seconds for verification (default: 120)
VERIFICATION_TIMEOUT=120

# Max verification attempts before kick (default: 3)
MAX_VERIFICATION_ATTEMPTS=3

# Anti-Flood Settings
# Number of messages in time window to trigger flood (default: 5)
FLOOD_LIMIT=5

# Time window in seconds for flood detection (default: 10)
FLOOD_TIME_WINDOW=10

# Warning Settings
# Max warnings before auto-kick (default: 3)
MAX_WARNINGS=3

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Web Server for Portal Verification (Optional)
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_URL=http://localhost:8080

# ===========================================
# CryptoBot Payment Gateway (Premium Feature)
# ===========================================
# Get token from @CryptoBot on Telegram
# Create an app at https://t.me/CryptoBot -> Crypto Pay -> My Apps
CRYPTO_PAY_TOKEN=your_crypto_pay_token_here

# Use testnet for testing (set to true for development)
# Testnet: https://t.me/CryptoTestnetBot
CRYPTO_PAY_TESTNET=false
