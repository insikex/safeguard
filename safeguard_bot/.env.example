# ===========================================
# Safeguard Bot Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Telegram Bot Token (Required)
# Get from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Bot Owner ID (Required for broadcast and owner-only features)
# Your Telegram user ID
OWNER_ID=123456789

# Bot Admin IDs (Optional)
# Comma-separated Telegram user IDs who have admin access
ADMIN_IDS=123456789,987654321

# Database URL (Optional)
# Default: sqlite:///safeguard.db
DATABASE_URL=sqlite:///safeguard.db

# ===========================================
# Pakasir Payment Settings (QRIS Indonesia)
# ===========================================
# Daftar di https://app.pakasir.com untuk mendapatkan API credentials
# Dokumentasi: https://pakasir.com/p/docs

# Slug proyek dari Pakasir (wajib untuk pembayaran QRIS)
PAKASIR_PROJECT_SLUG=your_project_slug_here

# API Key dari halaman detail proyek Pakasir
PAKASIR_API_KEY=your_api_key_here

# Mode sandbox untuk testing (true untuk testing, false untuk production)
PAKASIR_SANDBOX=true

# ===========================================
# Premium Pricing Settings (dalam Rupiah IDR)
# ===========================================
PREMIUM_PRICE_1_MONTH_IDR=50000
PREMIUM_PRICE_3_MONTHS_IDR=100000
PREMIUM_PRICE_6_MONTHS_IDR=150000

# ===========================================
# Crypto Pay Settings (International Users)
# ===========================================
# CryptoBot Crypto Pay API for international cryptocurrency payments
# Documentation: https://help.send.tg/en/articles/10279948-crypto-pay-api
# Library: https://github.com/layerqa/aiocryptopay
#
# How to get your API token:
# 1. Open @CryptoBot in Telegram
# 2. Go to Crypto Pay -> Create App
# 3. Copy the API token

CRYPTOBOT_TOKEN=your_cryptobot_token_here

# Use testnet for testing (set to true for testing, false for production)
CRYPTOBOT_TESTNET=false

# Premium Pricing (in USD) - Used for international Crypto Pay payments
PREMIUM_PRICE_1_MONTH=10
PREMIUM_PRICE_3_MONTHS=18
PREMIUM_PRICE_6_MONTHS=50

# ===========================================
# Verification Settings
# ===========================================
# Timeout in seconds for verification (default: 120)
VERIFICATION_TIMEOUT=120

# Max verification attempts before kick (default: 3)
MAX_VERIFICATION_ATTEMPTS=3

# Anti-Flood Settings
# Number of messages in time window to trigger flood (default: 5)
FLOOD_LIMIT=5

# Time window in seconds for flood detection (default: 10)
FLOOD_TIME_WINDOW=10

# Warning Settings
# Max warnings before auto-kick (default: 3)
MAX_WARNINGS=3

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Web Server for Portal Verification (Optional)
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_URL=http://localhost:8080
